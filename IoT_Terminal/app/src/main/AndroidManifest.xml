<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hit_src.iot_terminal"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" />

        <service
            android:name=".service.StatusService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.hit_src.iot_terminal.service.IStatusService" />
            </intent-filter>
        </service>
        <service
            android:name=".service.DatabaseService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.hit_src.iot_terminal.service.IDatabaseService" />
            </intent-filter>
        </service>
        <service
            android:name=".service.InternetService"
            android:exported="true" />

        <activity android:name=".ui.InternetActivity" />
        <activity android:name=".ui.SerialActivity" />
        <activity android:name=".ui.OverviewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>