<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OverviewActivity_root_View"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.OverviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/Overview_serialarea_Title"
                    android:textSize="30sp" />

                <ListView
                    android:id="@+id/Overview_sensorlist_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="@string/Overview_overviewarea_Title"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Overview_Internetstatus_Textview"
                            android:layout_width="588dp"
                            android:layout_height="wrap_content"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/Overview_Internetstatus_Imageview"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/Overview_internetimage_description" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Overview_OverviewStatus_TextView"
                            android:layout_width="590dp"
                            android:layout_height="wrap_content"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/Overview_Overviewstatus_ImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/Overview_overviewimage_description" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Overview_Serialstatus_Textview"
                            android:layout_width="592dp"
                            android:layout_height="wrap_content"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/Overview_Serialstatus_ImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/Overview_serialimage_description"
                            android:scaleType="fitCenter" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/Overview_internetarea_Title"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Overview_internet_status_title"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/Overview_internet_status_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Overview_internet_status_lasttime_title"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/Overview_internet_status_lasttime_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/guidance_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
